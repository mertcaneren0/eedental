// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  phone     String
  message   String?
  status    String   @default("new") // new, contacted, resolved
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model CareerApplication {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String
  position    String
  experience  String?
  education   String?
  message     String?
  cvUrl       String?
  status      String   @default("new") // new, reviewing, interviewed, accepted, rejected
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model TeamMember {
  id          String   @id @default(cuid())
  name        String
  title       String   // e.g., "Diş Hekimi", "Asistan"
  specialty   String?  // e.g., "Endodonti Uzmanı"
  bio         String   // Geçmiş bilgileri, metin
  imageUrl    String?  // Fotoğraf URL'i
  order       Int      @default(0) // Sıralama için
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
  @@index([isActive])
}
